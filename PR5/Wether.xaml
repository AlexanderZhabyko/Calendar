<UserControl x:Class="PR5.Wether"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PR5"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <CheckBox x:Name="wetherChkbx" Content="CheckBox" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="5,0,5,0"/>
        <Image x:Name="wetherIcon" HorizontalAlignment="Left" Source="/icon/free-icon-sun-4814489.png" Height="80"  VerticalAlignment="Top" Width="80" Grid.Column="1" Margin="42,10,42,10"/>

    </Grid>
</UserControl>
